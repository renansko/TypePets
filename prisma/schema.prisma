generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    ADMIN
    MEMBER
}

enum Food {
    LITTLE
    MODERATELY
    LOT
}

enum Temperament {
    AGGRESSIVE
    DEMEANOR
}

model User {
    id            String   @id @default(uuid())
    name          String
    email         String   @unique
    password_hash String
    role          Role     @default(MEMBER)
    created_at    DateTime @default(now())
    number        String
    pets          PETS[]
    ORG           ORG?     @relation(fields: [orgId], references: [id])
    orgId         String?
}

model ORG {
    id            String   @id @default(uuid())
    name          String
    email         String   @unique
    password_hash String
    role          Role     @default(ADMIN)
    number        String
    PETS          PETS[]
    created_at    DateTime @default(now())
    city          String
    users_id      User[]
}

model PETS {
    id              String       @id @default(uuid())
    race            String
    type            String
    characteristics String
    Available       Boolean?
    ORG             ORG          @relation(fields: [orgId], references: [id])
    orgId           String
    User            User?        @relation(fields: [userId], references: [id])
    userId          String?
    petsDetail      PetsDetail[]
    created_at      DateTime     @default(now())
}

model PetsDetail {
    id          String       @id @default(uuid())
    height      Decimal
    weight      Decimal
    temperament Temperament?
    food        Food?
    PETS        PETS?        @relation(fields: [petsId], references: [id])
    petsId      String?
    created_at  DateTime     @default(now())
}
